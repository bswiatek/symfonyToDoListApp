{% extends ':todolist:base.html.twig' %}

{% block body %}
    <div><a href="{{ path('add-task') }}">Add new task</a></div>
    <div>
        {% for task in tasks %}
            <hr>
            <div>
                <p {% if task.done %}style="color: green"{% endif %}>
                    {{ task.time|date('Y-m-d') }} - <strong>{{ task.title }}</strong>
                </p>
                {% if not task.done %}
                    <a href="{{ path('markdone-task', {'id': task.id}) }}">done</a>
                {% endif %}
                {% if task.done %}
                    <a href="{{ path('markundone-task', {'id': task.id}) }}">undone</a>
                    <a href="{{ path('remove-task', {'id': task.id}) }}">remove</a>
                {% endif %}
            </div>
        {% endfor %}
    </div>
{% endblock %}